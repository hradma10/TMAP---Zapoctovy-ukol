<?xml version="1.0" encoding="utf-8"?><!-- item_conversion.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="cz.tmap.converterApp.fragmentsAndActivities.MainActivity">

    <TextView
        android:id="@+id/textTypeHistory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textFromLabelHistory"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textToLabelHistory"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textFromNumberHistory"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:paddingStart="5dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textToNumberHistory"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_delete_history_item"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/transparent"
            app:icon="@drawable/delete_fill0_wght400_grad0_opsz48"
            app:iconSize="30dp"
            app:iconTint="@color/main_color" />

        <TextView
            android:id="@+id/textTimestampHistory"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:outlineAmbientShadowColor="@color/white" />

</LinearLayout>